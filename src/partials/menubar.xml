<MenuBar>
	<Menu name="Finder">
		<Menu name="About Finder"/>
		<Menu type="divider"/>
		<Menu name="Preferences"/>
		<Menu type="divider"/>
		<Menu name="Emptry Trash"/>
		<Menu type="divider"/>
		<Menu name="Services">
			<Menu name="Open"/>
			<Menu name="Close"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Hide Finder"/>
		<Menu name="Hide Others"/>
		<Menu name="Show All" disabled="1"/>
		<Menu type="divider"/>
		<Menu name="Quit Finder" shell="win -c"/>
	</Menu>
	<Menu name="Edit">
		<Menu name="Cut"/>
		<Menu name="Copy"/>
		<Menu name="Paste"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
	<Menu name="View" for="toolbar-context">
		<Menu name="View&#8230;" for="view-options">
			<Menu name="as Icons" click="select-file-view" arg="icons" check-group="view-items-as"/>
			<Menu name="as List" click="select-file-view" arg="list" check-group="view-items-as"/>
			<Menu name="as Columns" click="select-file-view" arg="columns" check-group="view-items-as" is-checked="1"/>
		</Menu>
		<Menu name="Sort By&#8230;" for="view-sort-by">
			<Menu name="Name" check-group="sort-items-by" is-checked="1"/>
			<Menu name="Kind" check-group="sort-items-by"/>
			<Menu name="Size" check-group="sort-items-by"/>
			<Menu name="Date Modified" check-group="sort-items-by"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Slim Sidebar" toggle_false="Standard Sidebar" click="toggle-sidebar-icons"/>
		<Menu name="Hide Sidebar" toggle_false="Show Sidebar" click="toggle-sidebar-view"/>
		<Menu name="Hide Status Bar" toggle_false="Show Status Bar" click="toggle-statusbar-view"/>
		<Menu type="divider"/>
		<Menu name="Hide Toolbar" toggle_true="Show Toolbar" click="toggle-toolbar"/>
	</Menu>
	<Menu name="Window">
		<Menu name="New Finder Window" click="new-clone-window" hotkey="alt+n"/>
		<Menu type="divider"/>
		<Menu name="Minimize" shell="win -s min"/>
		<Menu name="Maximize" shell="win -s max"/>
		<Menu type="divider"/>
		<Menu name="Close Window" click="close-clone-window" hotkey="alt+w"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Send Finder Feedback"/>
		<Menu type="divider"/>
		<Menu name="Finder Help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>

<Menu for="folder-content">
	<Menu name="New Folder" click="create-new-folder"/>
	<Menu type="divider"/>
	<Menu name="Get Info"/>
	<Menu name="View&#8230;" invoke="view-options"/>
	<Menu name="Sort By&#8230;" invoke="view-sort-by"/>
</Menu>
